<h1> Sections </h1>


<ul>
  <% @sections.each do |section| %>
    <li><a href='/sections/<%= section.id %>'><%= section.name %></a></li>
  <% end %>
</ul>

<% if @section.errors.any? %>
  <br />
  <h3>Please fix these errors:</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <br />
<% end %>

<form action="/sections" method="post">
  <label for="name">Section Name</label>
  <input id="name" name="sections[name]" value="<%= @section.name %>"><br>
  <label for="Section_number">Section Number</label>
  <input id="section_number" name="sections[section_number]" type="number" value="<%= @section.section_number %>" min="1"><br>
  <label for="chapter">Chapter</label>
  <select id="chapter" name="sections[chapter_id]">
    <% @chapters.each do |chapter| %>
      <option value="<%= chapter.id %>"><%= chapter.name %></option>
    <% end %>
  </select>
  <button>Add Section</button>
</form>
<hr>
<a href="/sections"><button>Add New Section</button></a>
